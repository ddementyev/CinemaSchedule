@model CinemaSchedule.Models.SessionModel

@Html.Label("Добавить сеанс", new { @class = "mtop20", style = "font-size: 20px;" })
@using (Html.BeginForm("AddSession", "Cinema", FormMethod.Post))
{
    @Html.Label("Кинотеатр:", new { @class = "mtop20" });
    @Html.DropDownListFor(t => t.Session.Theater, Model.CinemaCatalog.Theaters.Select(list => new SelectListItem()
        {
            Text = list.Theater,
            Value = list.Theater
        }), "Выберите кинотеатр", new { @class= "form-control" })
    @Html.ValidationMessageFor(a => a.Session.Theater)<br />
    @Html.Label("Фильм:", new { @class = "mtop20" });
    @Html.DropDownListFor(m => m.Session.Movie, Model.CinemaCatalog.Movies.Select(list => new SelectListItem()
        {
            Text = list.Movie,
            Value = list.Movie

        }), "Выберите фильм", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Session.Movie)<br />
    @Html.Label("Дата:", new { @class = "mtop20" });
    @Html.TextBoxFor(d => d.Session.Date, new { type = "date", @class = "form-control" })
    @Html.ValidationMessageFor(d => d.Session.Date)<br />
    @Html.Label("Время:", new { @class = "mtop20" });
    @Html.TextBoxFor(t => t.Session.Time, new { type = "time", @class = "form-control" })
    @Html.ValidationMessageFor(t => t.Session.Time)<br />
    @Html.TextBox("Add", "Добавить", new { type = "submit", @class = "btn btn-success mtop20" })
}

